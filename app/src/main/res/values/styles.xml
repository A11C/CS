<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#c6c6c6</item>
        <item name="colorPrimaryDark">#dcdcdc</item>
        <item name="colorAccent">#c000fa</item>
        <item name="android:navigationBarColor">#c6c6c6</item>
    </style>

    <style name="CategoryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorCategories</item>
    <item name="colorPrimaryDark">@color/colorCategories</item>
    <item name="colorAccent">@color/colorCategories</item>
    <item name="android:navigationBarColor">@color/colorCategories</item>
</style>

    <style name="ProductTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorProducts</item>
        <item name="colorPrimaryDark">@color/colorProducts</item>
        <item name="colorAccent">@color/colorProducts</item>
        <item name="android:navigationBarColor">@color/colorProducts</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
