<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/Button_Categorias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_categorias"
                android:scaleType="fitCenter"
                android:src="@drawable/categorias"
                tools:ignore="NestedWeights" />

            <ImageButton
                android:id="@+id/Button_Productos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_productos"
                android:scaleType="fitCenter"
                android:src="@drawable/productos2" />

            <ImageButton
                android:id="@+id/Button_Ensambles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_ensambles"
                android:scaleType="fitCenter"
                android:src="@drawable/ensambles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3495b6"
                android:text="@string/tag_categorias"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#85b4a4"
                android:text="@string/tag_productos"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#76b823"
                android:text="@string/tag_ensambles"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/Button_Clientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_clientes"
                android:scaleType="fitCenter"
                android:src="@drawable/clientes"
                tools:ignore="NestedWeights" />

            <ImageButton
                android:id="@+id/Button_Ordenes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_ordenes"
                android:scaleType="fitCenter"
                android:src="@drawable/ordenes" />

            <ImageButton
                android:id="@+id/Button_Reportes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:contentDescription="@string/tag_reportes"
                android:scaleType="fitCenter"
                android:src="@drawable/reportes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff7f27"
                android:text="@string/tag_clientes"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff5b80"
                android:text="@string/tag_ordenes"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#d36dd3"
                android:text="@string/tag_reportes"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
