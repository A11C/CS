<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.fiuady.android.compustore.ProductsActivity">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/tag_Filtro"
                    android:id="@+id/filtro_text"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_categorias"
                    android:id="@+id/categorias_tag"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/filtro_text"
                     />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:hint="Elige una categorÃ­a..."
                    android:textColor="@android:color/black"
                    android:layout_below="@id/categorias_tag"
                    android:layout_toEndOf="@+id/categorias_tag"></Spinner>

                <TextView
                    android:id="@+id/busqueda_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_busqueda"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/spinner"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/busqueda_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/busqueda_tag"
                    android:layout_centerHorizontal="true"
                    android:textSize="18dp" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/buscar_button"
                    android:layout_toRightOf="@id/busqueda_text"
                    android:layout_below="@id/spinner"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_search_category_default"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                     />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/productos_RecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

