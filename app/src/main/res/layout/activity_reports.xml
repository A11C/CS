<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiuady.hadp.compustore.OrdersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/Button_Faltantes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:contentDescription="@string/tag_faltantes"
            android:scaleType="fitCenter"
            android:src="@drawable/productosfaltantes"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE49DE4"
            android:text="@string/tag_faltantes"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Button_Confirmacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:contentDescription="@string/tag_orderconfirmation"
            android:scaleType="fitCenter"
            android:src="@drawable/checklist"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE49DE4"
            android:text="@string/tag_orderconfirmation"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/Button_Ventass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:contentDescription="@string/tag_resumenventas"
            android:scaleType="fitCenter"
            android:src="@drawable/resumen2"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE49DE4"
            android:text="@string/tag_resumenventas"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />


    </LinearLayout>
</FrameLayout>